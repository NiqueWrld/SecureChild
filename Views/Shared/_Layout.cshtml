@using Microsoft.AspNetCore.Identity
@using SecureChild.Areas.Identity.Data
@using Microsoft.AspNetCore.Authorization
@inject UserManager<SecureChildUser> UserManager
@inject SignInManager<SecureChildUser> SignInManager

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>@ViewData["Title"] - Secure Child</title>

    <!-- Custom fonts for this template-->
    <link href="~/lib/bootstrap/dist/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">

    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">

    <!-- Custom styles for this template-->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/sb-admin-2.min.css" />

</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        <ul class="navbar-nav bg-black-custom sidebar sidebar-dark accordion" id="accordionSidebar">


            <!-- Sidebar - Brand -->
            <a class="sidebar-brand d-flex align-items-center justify-content-center bg-black-custom" asp-controller="Home" asp-action="Index">
                <div class="sidebar-brand-icon rotate-n-15">
                    <i>
                        <img src="~/lib/bootstrap/dist/img/SecureChildLogo.png" style="width:50px;" alt="Icon">
                    </i>
                </div>
                <div class="sidebar-brand-text mx-1 text-royal-yellow">Secure Child</div>
            </a>




            <!-- Divider -->
            <hr class="sidebar-divider my-0">


            @{
                if (!User.Identity.IsAuthenticated)
                {

                    <!-- Nav Item - Home -->
                    <li class="nav-item active">
                        <a class="nav-link text-royal-yellow" asp-controller="Home" asp-action="Index">
                            <i class="fas fa-fw fa-home"></i>
                            <span> Home</span>
                        </a>
                    </li>


                    <li class="nav-item active">
                        <a class="nav-link text-royal-yellow" asp-controller="Home" asp-action="AboutUs">
                            <i class="fas fa-fw fa-info"></i>
                            <span> About</span>
                        </a>
                    </li>

         
                }
                else
                {
                    @if (User.IsInRole("Admin"))
                    {

                        <!-- Nav Item - Dashboard -->
                        <li class="nav-item active">
                            <a class="nav-link text-royal-yellow" asp-controller="Admin" asp-action="Dashboard">
                                <i class="fas fa-fw fa-tachometer-alt"></i>
                                <span>Dashboard</span>
                            </a>
                        </li>

                        <li class="nav-item active">
                            <a class="nav-link text-royal-yellow" asp-controller="Alerts" asp-action="Index">
                                <i class="fas fa-user-danger"></i>
                                <span class="font-weight-bold text-danger">Alerts</span>
                            </a>
                        </li>


                        <!-- Divider -->
                        <hr class="sidebar-divider">


                        <!-- Heading -->
                        <div class="sidebar-heading">
                            Management
                        </div>

                        <li class="nav-item active">
                            <a class="nav-link text-royal-yellow" asp-controller="Admin" asp-action="ManageSchoolTime">
                                <i class="fas fa-user-graduate"></i>
                                <span>Manage School Times</span>
                            </a>
                        </li>

                        <!-- Nav Item - Dashboard -->
                        <li class="nav-item active">
                            <a class="nav-link text-royal-yellow" asp-controller="Admin" asp-action="ManageStudents">
                                <i class="fas fa-user-graduate"></i>
                                <span>Manage Students</span>
                            </a>
                        </li>

                        <!-- Nav Item - Dashboard -->
                        <li class="nav-item active">
                            <a class="nav-link text-royal-yellow" asp-controller="Admin" asp-action="ManageParents">
                                <i class="fas fa-user"></i>
                                <span>Manage Parents</span>
                            </a>
                        </li>

                        <!-- Nav Item - Dashboard -->
                        <li class="nav-item active">
                            <a class="nav-link text-royal-yellow" asp-controller="Admin" asp-action="ManageSecurityStaff">
                                <i class="fas fa-user-shield"></i>
                                <span>Manage Security</span>
                            </a>
                        </li>

                        <!-- Heading -->
                        <div class="sidebar-heading">
                            Entries and Exits
                        </div>

                        <!-- Nav Item - Dashboard -->
                        <li class="nav-item active">
                            <a class="nav-link text-royal-yellow" asp-controller="Security" asp-action="ViewEntries">
                                <i class="fas fa-door-open"></i>
                                <span>Entries</span>
                            </a>
                        </li>

                        <!-- Nav Item - Dashboard -->
                        <li class="nav-item active">
                            <a class="nav-link text-royal-yellow" asp-controller="Security" asp-action="ViewExits">
                                <i class="fas fa-door-closed"></i>
                                <span>Exits</span>
                            </a>
                        </li>

                       
                      



                    }
                    else if (User.IsInRole("Security"))
                    {
                        <ul class="navbar-nav">

                            <!-- Nav Item - Dashboard -->
                            <li class="nav-item active">
                                <a class="nav-link text-royal-yellow" asp-controller="Security" asp-action="Profile">
                                    <i class="fas fa-user"></i>
                                    <span>Profile</span>
                                </a>
                            </li>

                            <!-- Divider -->
                            <hr class="sidebar-divider">


                            <!-- Heading -->
                            <div class="sidebar-heading">
                                Booking
                            </div>

                            <!-- Nav Item - Dashboard -->
                            <li class="nav-item active">
                                <a class="nav-link text-royal-yellow" asp-controller="Security" asp-action="EntriesandExit">
                                    <i class="fas fa-book"></i>
                                    <span>Entries and Exit</span>
                                </a>
                            </li>

                            <!-- Nav Item - Dashboard -->
                            <li class="nav-item active">
                                <a class="nav-link text-royal-yellow" asp-controller="Security" asp-action="ViewEntries">
                                    <i class="fas fa-door-open"></i>
                                    <span>Entries</span>
                                </a>
                            </li>

                            <!-- Nav Item - Dashboard -->
                            <li class="nav-item active">
                                <a class="nav-link text-royal-yellow" asp-controller="Security" asp-action="ViewExits">
                                    <i class="fas fa-door-closed"></i>
                                    <span>Exits</span>
                                </a>
                            </li>


                        </ul>
                    }
                    

                }

                <!-- Divider -->
                <hr class="sidebar-divider d-none d-md-block">

                <!-- Sidebar Toggler (Sidebar) -->
                <div class="text-center d-none d-md-inline">
                    <button class="rounded-circle border-0" id="sidebarToggle"></button>
                </div>
            }

        </ul>
        <!-- End of Sidebar -->
        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">

                    <!-- Sidebar Toggle (Topbar) -->
                    <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
                        <i class="fa fa-bars"></i>
                    </button>

                    <!-- Topbar Search -->
                    <form class="d-none d-sm-inline-block form-inline mr-auto ml-md-3 my-2 my-md-0 mw-100 navbar-search" style="color: ffd700;">
                        <div class="input-group">
                            <input type="text" class="form-control bg-light border-0 small" placeholder="Search for..."
                                   aria-label="Search" aria-describedby="basic-addon2" style="background-color: black; color: ffd700;">
                            <div class="input-group-append">
                                <button class="btn btn-primary" type="button" style="background-color: #ffd700; color: black;">
                                    <i class="fas fa-search fa-sm"></i>
                                </button>
                            </div>
                        </div>
                    </form>

                    <!-- Topbar Navbar -->
                    <ul class="navbar-nav ml-auto" style="background-color: black; color: ffd700;">
                        <!-- Add your navbar items here -->
                    </ul>


                        <!-- Nav Item - Search Dropdown (Visible Only XS) -->
                        <li class="nav-item dropdown no-arrow d-sm-none">
                            <a class="nav-link dropdown-toggle" href="#" id="searchDropdown" role="button"
                               data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="fas fa-search fa-fw"></i>
                            </a>
                            <!-- Dropdown - Messages -->
                            <div class="dropdown-menu dropdown-menu-right p-3 shadow animated--grow-in"
                                 aria-labelledby="searchDropdown">
                                <form class="form-inline mr-auto w-100 navbar-search">
                                    <div class="input-group">
                                        <input type="text" class="form-control bg-light border-0 small"
                                               placeholder="Search for..." aria-label="Search"
                                               aria-describedby="basic-addon2">
                                        <div class="input-group-append">
                                            <button class="btn btn-primary" type="button">
                                                <i class="fas fa-search fa-sm"></i>
                                            </button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </li>





                        <div class="topbar-divider d-none d-sm-block"></div>

                        @{
                            if (User.Identity.IsAuthenticated)
                            {

                            <!-- Nav Item - Alerts -->
                            <li class="nav-item dropdown no-arrow mx-1">
                                <a class="nav-link dropdown-toggle" href="#" id="alertsDropdown" role="button"
                                   data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <i class="fas fa-bell fa-fw" style="color: #ffd700;"></i>
                                    <!-- Counter - Alerts -->
                                    <span class="badge badge-danger badge-counter">3+</span>
                                </a>
                                <!-- Dropdown - Alerts -->
                                <div class="dropdown-list dropdown-menu dropdown-menu-right shadow animated--grow-in"
                                     aria-labelledby="alertsDropdown" style="background-color: black; color: #ffd700;">
                                    <h6 class="dropdown-header" style="color: #ffd700;">
                                        Alerts Center
                                    </h6>
                                    <a class="dropdown-item d-flex align-items-center" href="#">
                                        <div class="mr-3">
                                            <div class="icon-circle" style="background-color: #ffd700;">
                                                <i class="fas fa-child" style="color: black;"></i> <!-- Change icon color to black for contrast -->
                                            </div>
                                        </div>
                                        <div>
                                            <div class="small text-gray-500" style="color: #ffd700;">September 24, 2024</div>
                                            <span class="font-weight-bold">Missing Child Alert: A child has been reported missing!</span>
                                        </div>
                                    </a>
                                    <a class="dropdown-item d-flex align-items-center" href="#">
                                        <div class="mr-3">
                                            <div class="icon-circle" style="background-color: #28a745;">
                                                <i class="fas fa-check" style="color: white;"></i> <!-- Change icon color to white for contrast -->
                                            </div>
                                        </div>
                                        <div>
                                            <div class="small text-gray-500" style="color: #ffd700;">September 23, 2024</div>
                                            <span class="font-weight-bold">Good News: A missing child has been found safely!</span>
                                        </div>
                                    </a>
                                    <a class="dropdown-item d-flex align-items-center" href="#">
                                        <div class="mr-3">
                                            <div class="icon-circle" style="background-color: #ffc107;">
                                                <i class="fas fa-exclamation-triangle" style="color: white;"></i> <!-- Change icon color to white for contrast -->
                                            </div>
                                        </div>
                                        <div>
                                            <div class="small text-gray-500" style="color: #ffd700;">September 22, 2024</div>
                                            <span class="font-weight-bold">Alert: Unusual activity reported near the children's park.</span>
                                        </div>
                                    </a>
                                    <a class="dropdown-item text-center small text-gray-500" style="color: #ffd700;" href="#">Show All Alerts</a>
                                </div>
                            </li>


                            <!-- Nav Item - Messages -->
                            <li class="nav-item dropdown no-arrow mx-1">
                                <a class="nav-link dropdown-toggle" href="#" id="messagesDropdown" role="button"
                                   data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <i class="fas fa-envelope fa-fw" style="color: #ffd700;"></i>
                                    <!-- Counter - Messages -->
                                    <span class="badge badge-danger badge-counter">7</span>
                                </a>
                                <!-- Dropdown - Messages -->
                                <div class="dropdown-list dropdown-menu dropdown-menu-right shadow animated--grow-in alert-dropdown"
                                     aria-labelledby="messagesDropdown">
                                    <h6 class="dropdown-header" style="color: #ffd700;">
                                        Message Center
                                    </h6>
                                    <a class="dropdown-item d-flex align-items-center" href="#">
                                        <div class="dropdown-list-image mr-3">
                                            <img class="rounded-circle" src="~/lib/bootstrap/dist/img/undraw_profile_1.svg" alt="...">
                                            <div class="status-indicator bg-success"></div>
                                        </div>
                                        <div class="font-weight-bold" style="color: #ffd700;">
                                            <div class="text-truncate">
                                                Cation: A child has been reported missing in your area. Please stay vigilant.
                                            </div>
                                            <div class="small text-gray-500" style="color: #ffd700;">Community Watch · 10m</div>
                                        </div>
                                    </a>
                                    <a class="dropdown-item d-flex align-items-center" href="#">
                                        <div class="dropdown-list-image mr-3">
                                            <img class="rounded-circle" src="~/lib/bootstrap/dist/img/undraw_profile_2.svg" alt="...">
                                            <div class="status-indicator"></div>
                                        </div>
                                        <div style="color: #ffd700;">
                                            <div class="text-truncate">
                                                Good news! A child reported missing yesterday has been found safe.
                                            </div>
                                            <div class="small text-gray-500" style="color: #ffd700;">Community Alert · 1d</div>
                                        </div>
                                    </a>
                                    <a class="dropdown-item d-flex align-items-center" href="#">
                                        <div class="dropdown-list-image mr-3">
                                            <img class="rounded-circle" src="~/lib/bootstrap/dist/img/undraw_profile_3.svg" alt="...">
                                            <div class="status-indicator bg-warning"></div>
                                        </div>
                                        <div style="color: #ffd700;">
                                            <div class="text-truncate">
                                                Important: Suspicious activity reported near the playground. Stay alert!
                                            </div>
                                            <div class="small text-gray-500" style="color: #ffd700;">Safety Team · 2d</div>
                                        </div>
                                    </a>
                                    <a class="dropdown-item text-center small text-gray-500" style="color: #ffd700;" href="#">Read More Messages</a>
                                </div>
                            </li>


                                <!-- Nav Item - User Information -->
                                <li class="nav-item dropdown no-arrow">
                                    <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button"
                                       data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        <span class="mr-2 d-none d-lg-inline text-gray-600 small">
                                            @User.Identity.Name
                                            @{
                                                if (User.IsInRole("Admin"))
                                                {
                                                    <span id="userRole" class="text-muted">Admin</span>
                                                }
                                                else if (User.IsInRole("Security"))
                                                {
                                                    <span id="userRole" class="text-muted">Security</span>
                                                }
                                            }
                                        </span>
                                        <img class="img-profile rounded-circle"
                                             src="~/lib/bootstrap/dist/img/undraw_profile.svg">
                                    </a>
                                    <!-- Dropdown - User Information -->
                                    <div class="dropdown-menu dropdown-menu-right shadow animated--grow-in"
                                         aria-labelledby="userDropdown">
                                        <a class="dropdown-item" href="#">
                                            <i class="fas fa-user fa-sm fa-fw mr-2 text-gray-400"></i>
                                            Profile
                                        </a>
                                        <a class="dropdown-item" href="#">
                                            <i class="fas fa-cogs fa-sm fa-fw mr-2 text-gray-400"></i>
                                            Settings
                                        </a>
                                        <a class="dropdown-item" href="#">
                                            <i class="fas fa-list fa-sm fa-fw mr-2 text-gray-400"></i>
                                            Activity Log
                                        </a>
                                        <div class="dropdown-divider"></div>
                                        <a class="dropdown-item" href="#" data-toggle="modal" data-target="#logoutModal">
                                            <i class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-400"></i>
                                            Logout
                                        </a>
                                    </div>
                                </li>
                            }
                            else
                            {
                                <!-- Nav Item - Charts -->
                                <li class="nav-item">
                                    <a class="nav-link" href="/Identity/Account/Login">
                                        <i class="fas fa-sign-in-alt fa-chart-area"></i>
                                        <span>. Login</span>
                                    </a>
                                </li>
                            }
                        }
                    </ul>

                </nav>
                <!-- End of Topbar -->
                <!-- Begin Page Content -->
                <div class="container">
                    <main role="main" class="pb-3">
                        @RenderBody()
                    </main>
                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->
            <!-- Footer -->
            <footer class="sticky-footer">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>&copy; 2024 - Secure Events - <a asp-area="" asp-controller="Home" asp-action="AboutUS">About US</a></span>
                    </div>
                </div>
            </footer>

            <!-- Custom CSS for Footer -->
            <style>
                .sticky-footer {
                    background-color: #000; /* Black background */
                    color: #fada5e; /* Royal Yellow text */
                    padding: 20px 0; /* Adjust padding if necessary */
                }

                    .sticky-footer a {
                        color: #fada5e; /* Royal Yellow link */
                        text-decoration: none;
                    }

                        .sticky-footer a:hover {
                            color: #ffe066; /* Lighter yellow on hover */
                        }
            </style>

            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->
    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Logout Modal-->
    <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
         aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content" style="background-color: black; color: #ffd700;">
                <!-- Modal background and text color -->
                <div class="modal-header" style="border-bottom: 1px solid #ffd700;">
                    <!-- Header border color -->
                    <h5 class="modal-title" id="exampleModalLabel" style="color: #ffd700;">Ready to Leave?</h5> <!-- Title color -->
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close" style="color: #ffd700;">
                        <!-- Close button color -->
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body" style="color: #fff;">Select "Logout" below if you are ready to end your current session.</div> <!-- Body text color -->
                <div class="modal-footer" style="border-top: 1px solid #ffd700;">
                    <!-- Footer border color -->
                    <button class="btn btn-secondary" type="button" data-dismiss="modal" style="background-color: darkgray; color: black;">Cancel</button> <!-- Cancel button style -->
                    <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home")" method="post">
                        <div class="container-login100-form-btn">
                            <div class="wrap-login100-form-btn">
                                <div class="login100-form-bgbtn"></div>
                                <button id="login-submit" type="submit" class="btn btn-primary" style="background-color: #ffd700; color: black;">
                                    <!-- Logout button style -->
                                    Logout
                                </button>
                            </div>
                        </div>
                        <div asp-validation-summary="ModelOnly" class="text-danger text-center" role="alert"></div>
                    </form>
                </div>
            </div>
        </div>
    </div>


    <!-- Bootstrap core JavaScript-->
    <script src="~/lib/bootstrap/dist/vendor/jquery/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/lib/bootstrap/dist/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/lib/bootstrap/dist/js/sb-admin-2.min.js"></script>

    <!-- Page level plugins -->
    <script src="~/lib/bootstrap/dist/vendor/chart.js/Chart.min.js"></script>


    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>

<style>
    .bg-royal-yellow {
        background-color: #fada5e !important; /* Royal Yellow */
        color: black !important; /* Text color for contrast */
    }

    .text-royal-yellow {
        color: #fada5e !important; /* Text in Royal Yellow */
    }

    .bg-black-custom {
        background-color: black !important; /* Black background */
        color: #fada5e !important; /* Text in Royal Yellow */
    }
</style>
