@model SecureChild.Models.Alert

@{
    ViewData["Title"] = "Delete";
}

<h1 style="color: #000;">Delete</h1>

<h3 style="color: #fff;">Are you sure you want to delete this?</h3>
<div style="background-color: #000; color: #fff; padding: 20px;">
    <h4 style="color: #ffd700;">Alert</h4>
    <hr style="border-color: #ffd700;" />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Message)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Message)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Time)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Time)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AlertType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AlertType)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SentSuccessfully)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SentSuccessfully)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn" style="background-color: #ffd700; color: #000;" /> |
        <a class="btn" style="background-color: #ffd700; color: #000;" asp-action="Index">Back to List</a>
    </form>
</div>
