@model IEnumerable<Student>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center mb-4" style="color: #000;">Students Entries and Exits</h1>

<table class="table table-dark table-bordered table-hover">
    <thead style="background-color: black; color: #ffd700;">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr style="color: #fff;">
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Age)
                </td>
                <td>
                    <a asp-action="Entries" asp-route-id="@item.Id" class="btn btn-warning btn-sm text-dark font-weight-bold mx-1">Entering</a>
                    <a asp-action="Exit" asp-route-id="@item.Id" class="btn btn-warning btn-sm text-dark font-weight-bold mx-1">Exiting</a>
                </td>
            </tr>
        }
    </tbody>
</table>
