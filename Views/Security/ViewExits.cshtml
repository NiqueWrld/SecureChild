@model IEnumerable<SecureChild.Models.Exit>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center mb-4" style="color: #000;">Exits</h1>

<table class="table table-dark table-bordered table-hover">
    <thead>
        <tr style="background-color: #000; color: #ffd700;">
            <th>
                @Html.DisplayNameFor(model => model.Student)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Time)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExitGate)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr style="color: #fff; border-bottom: 1px solid #ffd700;">
                <td>
                    @Html.DisplayFor(modelItem => item.Student.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Time)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ExitGate)
                </td>
            </tr>
        }
    </tbody>
</table>
