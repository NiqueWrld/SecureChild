@model IEnumerable<SecureChild.Models.Student>

@{
    ViewData["Title"] = "Index";
}

<h1 style="color: #000;"></h1>

<p>
    <a asp-action="CreateStudent" class="btn btn-warning">Create New</a>
</p>

<table class="table table-dark table-bordered table-hover">
    <thead style="background-color: black; color: #fada5e;">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Parent)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr style="color: #fff;">
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Age)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Parent.Name)
                </td>
                <td>
                    <a asp-action="EditStudent" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="DetailsStudent" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Details</a>
                    <a asp-action="DeleteStudent" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
