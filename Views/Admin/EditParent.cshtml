@model SecureChild.Models.Parent

@{
    ViewData["Title"] = "Edit Parent";
}

<h1 style="color: #000;"></h1>

<h4 style="color: #ffd700;">Parent</h4>
<hr style="border-color: #ffd700;" />
<div class="row" style="background-color: black; color: white; padding: 20px;">
    <div class="col-md-4 offset-md-4">
        <form asp-action="EditParent">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label" style="color: #ffd700;"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ContactInfo" class="control-label" style="color: #ffd700;"></label>
                <input asp-for="ContactInfo" class="form-control" />
                <span asp-validation-for="ContactInfo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="apiKey" class="control-label" style="color: #ffd700;"></label>
                <input asp-for="apiKey" class="form-control" />
                <span asp-validation-for="apiKey" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn" style="background-color: #ffd700; color: #000;" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ManageParents" class="btn btn-warning" style="background-color: #ffd700; color: black; margin-top: 10px;">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}