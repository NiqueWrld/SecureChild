@model IEnumerable<SecureChild.Models.Parent>

@{
    ViewData["Title"] = "Index";
}

<h1 style="color: #000;"></h1>

<p>
    <a asp-action="CreateParent" class="btn btn-warning">Create New</a>
</p>

<table class="table table-dark table-bordered table-hover">
    <thead style="background-color: black; color: #fada5e;">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContactInfo)
            </th>
            <th>
                Api Key
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr style="color: #fff;">
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ContactInfo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.apiKey)
                </td>
                <td>
                    <a asp-action="EditParent" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="DetailsParent" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Details</a>
                    <a asp-action="DeleteParent" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Delete</a>
                </td>

            </tr>
        }
    </tbody>
</table>
