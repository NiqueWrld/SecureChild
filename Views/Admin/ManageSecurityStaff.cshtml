@model IEnumerable<SecureChild.Models.SecurityStaff>

@{
    ViewData["Title"] = "Index";
}

<h1 style="color: #000;"></h1>

<p>
    <a asp-action="CreateSecurityStaff" class="btn btn-warning">Create New</a>
</p>

<table class="table table-dark table-bordered table-hover">
    <thead style="background-color: black; color: #fada5e;">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContactNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr style="color: #fff;">
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Gate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ContactNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Password)
                </td>
                <td>
                    <a asp-action="EditSecurityStaff" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="SecurityStaffDetails" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Details</a>
                    <a asp-action="DeleteSecurityStaff" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
