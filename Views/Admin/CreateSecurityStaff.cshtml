@model SecureChild.Models.SecurityStaff

@{
    ViewData["Title"] = "Create";
}

<h1 style="color: #000;"></h1> <!-- Title in black -->

<h4 style="color: #f00;">Security Staff</h4> <!-- Subheading in red -->
<hr style="border-color: #ffd700;" /> <!-- Horizontal rule in royal yellow -->
<div class="row" style="background-color: #000; color: #fff; padding: 20px;">
    <!-- Background for the form -->
    <div class="col-md-4">
        <form asp-action="CreateSecurityStaff">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name" class="control-label" style="color: #fff;"></label> <!-- Label in white -->
                <input asp-for="Name" class="form-control" style="color: black;" /> <!-- Input text in black -->
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gate" class="control-label" style="color: #fff;"></label> <!-- Label in white -->
                <input asp-for="Gate" class="form-control" style="color: black;" /> <!-- Input text in black -->
                <span asp-validation-for="Gate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ContactNumber" class="control-label" style="color: #fff;"></label> <!-- Label in white -->
                <input asp-for="ContactNumber" class="form-control" style="color: black;" /> <!-- Input text in black -->
                <span asp-validation-for="ContactNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label" style="color: #fff;"></label> <!-- Label in white -->
                <input asp-for="Password" class="form-control" style="color: black;" /> <!-- Input text in black -->
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" onclick="this.disabled=true; this.form.submit(); this.value='Creating...';" value="Create" class="btn" style="background-color: #ffd700; color: #000;" /> <!-- Create button in royal yellow -->
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ManageSecurityStaff" class="btn" style="background-color: #ffd700; color: #000; text-decoration: none; padding: 10px 15px; border-radius: 5px;">Back to List</a> <!-- Back to List styled as a button -->
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
